<Window x:Class="GeneticAlgorithm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
        xmlns:local="clr-namespace:GeneticAlgorithm"
        Title="MainWindow" Height="450" Width="800"
        d:DesignHeight="1000" d:DesignWidth="1000" d:DataContext="{d:DesignInstance local:MainWindow}">
    <Grid Name="TestGrid">
        <lvc:CartesianChart Series="{Binding SeriesCollection}" />
        <Button Click="StartOptimization">Optimize Portfolio!</Button>
    </Grid>
</Window>
